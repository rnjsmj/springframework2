<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">
	<!-- 로그인용 쿼리문 -->
	<select id="login" parameterType="member" >
		SELECT
			USER_ID,
			USER_PWD,
			USER_NAME,
			EMAIL,
			GENDER,
			AGE,
			PHONE,
			ADDRESS,
			ENROLL_DATE,
			MODIFY_DATE,
			STATUS
		FROM
			MEMBER
	   WHERE
			USER_ID = #{id}
		 AND
			USER_PWD = #{}
	</select>
</mapper>